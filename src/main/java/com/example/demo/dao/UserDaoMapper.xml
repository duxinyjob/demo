<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.UserDaoMapper">

    <resultMap id="BaseResultMap" type="com.example.demo.entity.User">
        <!--@Table user-->
        <result property="id" column="id" jdbcType="VARCHAR"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="gender" column="gender" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="account" column="account" jdbcType="VARCHAR"/>
        <result property="age" column="age" jdbcType="VARCHAR"/>
        <result property="gmtCreateTime" column="gmt_create_time" jdbcType="TIMESTAMP"/>
        <result property="gmtUpdateTime" column="gmt_update_time" jdbcType="TIMESTAMP"/>
        <result property="createUser" column="create_user" jdbcType="VARCHAR"/>
        <result property="updateUser" column="update_user" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, user_name, gender, password, account, age, gmt_create_time, gmt_update_time, create_user, update_user
        from demo.user
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, user_name, gender, password, account, age, gmt_create_time, gmt_update_time, create_user, update_user
        from demo.user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, user_name, gender, password, account, age, gmt_create_time, gmt_update_time, create_user, update_user
        from demo.user
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="userName != null and userName != ''">
                and user_name = #{userName}
            </if>
            <if test="gender != null and gender != ''">
                and gender = #{gender}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="account != null and account != ''">
                and account = #{account}
            </if>
            <if test="age != null and age != ''">
                and age = #{age}
            </if>
            <if test="gmtCreateTime != null">
                and gmt_create_time = #{gmtCreateTime}
            </if>
            <if test="gmtUpdateTime != null">
                and gmt_update_time = #{gmtUpdateTime}
            </if>
            <if test="createUser != null and createUser != ''">
                and create_user = #{createUser}
            </if>
            <if test="updateUser != null and updateUser != ''">
                and update_user = #{updateUser}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into demo.user(user_name, gender, password, account, age, gmt_create_time, gmt_update_time, create_user, update_user)
        values (#{userName}, #{gender}, #{password}, #{account}, #{age}, #{gmtCreateTime}, #{gmtUpdateTime}, #{createUser}, #{updateUser})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update demo.user
        <set>
            <if test="userName != null and userName != ''">
                user_name = #{userName},
            </if>
            <if test="gender != null and gender != ''">
                gender = #{gender},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="account != null and account != ''">
                account = #{account},
            </if>
            <if test="age != null and age != ''">
                age = #{age},
            </if>
            <if test="gmtCreateTime != null">
                gmt_create_time = #{gmtCreateTime},
            </if>
            <if test="gmtUpdateTime != null">
                gmt_update_time = #{gmtUpdateTime},
            </if>
            <if test="createUser != null and createUser != ''">
                create_user = #{createUser},
            </if>
            <if test="updateUser != null and updateUser != ''">
                update_user = #{updateUser},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from demo.user where id = #{id}
    </delete>

</mapper>